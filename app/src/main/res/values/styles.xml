<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#E32020</item>
        <item name="colorPrimaryDark">#E32020</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#c5c5c5</item>

    </style>

    <style name="TitleBar">
        <item name="android:background">#E32020</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TitleBarTheme" parent="android:Theme">
        <item name="android:windowTitleSize">40dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/TitleBar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
